<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.ibuxuan.commons.samples">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name="com.ibuxuan.commons.samples.App"
        android:allowBackup="true"
        android:icon="@mipmap/commons_launcher"
        android:label="@string/smtco_app_name"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.ibuxuan.commons.samples.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.ibuxuan.commons.activities.FAQActivity"/>
        <activity
            android:name="com.ibuxuan.commons.activities.AboutActivity"/>
        <activity
            android:name="com.ibuxuan.commons.activities.LicenseActivity"/>
        <activity
            android:name="com.ibuxuan.commons.activities.CustomizationActivity"/>
    </application>
</manifest>
